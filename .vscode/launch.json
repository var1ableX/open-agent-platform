      "name": "Start & Debug Next.js Frontend",
      "type": "pwa-node", // Use the modern Node debugger
      "request": "launch",
      "runtimeExecutable": "yarn", // Tell it to use yarn
      "runtimeArgs": [
          "dev" // Tell yarn to run the "dev" script
      ],
      "cwd": "/Users/observed/development/open-agent-platform/apps/web",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**", // Don't try to debug Node.js's own internal code
        "${workspaceFolder}/node_modules/**" // Don't try to debug into node_modules
      ],
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "openExternally" // Automatically open the browser
      }
    },
    {
